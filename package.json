{
  "name": "madrak",
  "version": "1.0.0",
  "description": "Madrak - A Chrome extension that automatically scrobbles music from YouTube Music to Last.fm",
  "main": "dist/background/service-worker.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && web-ext build --source-dir dist"
  },
  "keywords": [
    "chrome-extension",
    "lastfm",
    "youtube-music",
    "scrobbling",
    "music",
    "browser-extension"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lastfm-youtube-music-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lastfm-youtube-music-extension/issues"
  },
  "homepage": "https://github.com/yourusername/lastfm-youtube-music-extension#readme"
}
