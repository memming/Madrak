{
  "name": "madrak",
  "version": "0.5.0",
  "type": "module",
  "description": "Madrak - A Chrome extension that automatically scrobbles music from YouTube Music to Last.fm",
  "main": "dist/background/service-worker.js",
  "scripts": {
    "dev": "rollup -c --watch & node copy-assets.js",
    "build": "rollup -c && node copy-assets.js",
    "build:watch": "rollup -c --watch & node copy-assets.js",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && web-ext build --source-dir dist",
    "release": "npm run build && web-ext build --source-dir dist --overwrite-dest",
    "version:check": "node scripts/version-info.js",
    "version:update": "node scripts/update-version.js"
  },
  "keywords": [
    "chrome-extension",
    "lastfm",
    "youtube-music",
    "scrobbling",
    "music",
    "browser-extension"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/blueimp-md5": "^2.18.2",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.50.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0"
  },
  "dependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "blueimp-md5": "^2.19.0",
    "crypto-js": "^4.2.0",
    "tslib": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lastfm-youtube-music-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lastfm-youtube-music-extension/issues"
  },
  "homepage": "https://github.com/yourusername/lastfm-youtube-music-extension#readme"
}
